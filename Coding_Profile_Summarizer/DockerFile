# Use an official Python image as a base
FROM python:3.10-slim

# Set the working directory inside the container
WORKDIR /app

# Install system dependencies needed for Chrome and pip
RUN apt-get update && apt-get install -y \
    curl \
    gnupg \
    wget \
    # Add packages needed for Chrome
    && wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | apt-key add - \
    && sh -c 'echo "deb [arch=amd64] http://dl.google.com/linux/chrome/deb/ stable main" >> /etc/apt/sources.list.d/google-chrome.list' \
    && apt-get update \
    && apt-get install -y google-chrome-stable \
    # Clean up apt cache to keep image small
    && rm -rf /var/lib/apt/lists/*

# --- UPDATED COPY COMMANDS ---
# Copy your requirements file from the subfolder into the container's /app directory
COPY Coding_Profile_Summarizer/requirements.txt requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Copy the rest of your application code from the subfolder into the container's /app directory
COPY Coding_Profile_Summarizer/ .
# --- END UPDATED COPY COMMANDS ---

# Expose the port Gunicorn will run on
EXPOSE 10000

# Command to run your application using Gunicorn
CMD ["gunicorn", "--bind", "0.0.0.0:10000", "app:app"]