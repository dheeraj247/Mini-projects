
FROM python:3.10-slim

# Set the working directory inside the container
WORKDIR /app

# Install prerequisite packages. `ca-certificates` is needed for secure downloads.
RUN apt-get update && apt-get install -y \
    curl \
    gnupg \
    wget \
    ca-certificates \
    --no-install-recommends \
    && rm -rf /var/lib/apt/lists/*

# Add Google's official GPG key
RUN wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | gpg --dearmor -o /usr/share/keyrings/google-chrome-archive-keyring.gpg

# Set up the repository
RUN sh -c 'echo "deb [arch=amd64 signed-by=/usr/share/keyrings/google-chrome-archive-keyring.gpg] http://dl.google.com/linux/chrome/deb/ stable main" > /etc/apt/sources.list.d/google-chrome.list'

# Update apt and install Chrome
RUN apt-get update \
    && apt-get install -y google-chrome-stable \
    --no-install-recommends \
    && rm -rf /var/lib/apt/lists/*

# Copy your requirements file from the subfolder into the container's /app directory
COPY Coding_Profile_Summarizer/requirements.txt requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Copy the rest of your application code from the subfolder into the container's /app directory
COPY Coding_Profile_Summarizer/ .

# Expose the port Gunicorn will run on
EXPOSE 10000

# Command to run application using Gunicorn
CMD ["gunicorn", "--bind", "0.0.0.0:10000", "app:app"]